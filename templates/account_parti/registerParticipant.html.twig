{% extends 'header/headerInscrip.html.twig' %}

{% block title %}  {{ title }}{% endblock %}

{%  block main %}
    <h1 class="text-center">Bienvenue sur la pages d'inscription</h1>

    <div>
        <form action="#" method="post">
            {{ form_start(form_ins) }}



            <div class="form-row">
                <div class="form-group offset-3 col-md-3">
                    {{ form_label(form_ins.nom) }}
                    {{ form_widget(form_ins.nom, { 'attr' : { 'class': 'form-control' } }) }}

                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form_ins.prenom) }}
                    {{ form_widget(form_ins.prenom, { 'attr' : { 'class': 'form-control' } }) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group offset-3 col-md-3">
                    {{ form_label(form_ins.pseudo) }}
                    {{ form_widget(form_ins.pseudo, { 'attr' : { 'class': 'form-control' } }) }}

                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form_ins.telephone) }}
                    {{ form_widget(form_ins.telephone, { 'attr' : { 'class': 'form-control' } }) }}

                </div>
            </div>
            <div class="form-row">
                <div class="form-group offset-3 col-md-3">
                    {{ form_label(form_ins.email) }}
                    {{ form_widget(form_ins.email, { 'attr' : { 'class': 'form-control' } }) }}

                </div>
                <div class="form-group col-md-3">
                    {{ form_label(form_ins.pass) }}
                    {{ form_widget(form_ins.pass, { 'attr' : { 'class': 'form-control' } }) }}

                </div>
            </div>
           <div class="form-row">
               <div class="form-group offset-3 col-md-3">
                   {{ form_label(form_ins.campus) }}
                   {{ form_widget(form_ins.campus, { 'attr' : { 'class': 'custom-select' } }) }}
               </div>
           </div>

            <div class="form-row">
                <div class="form-group offset-5 col-4">
                    <button class="btn btn-success col-md-3">Cr√©e compte</button>
                    <a  href="{{ path('login') }}" class="btn btn-danger">Annuller</a>
                </div>
            </div>


            {{ form_end(form_ins) }}
        </form>
    </div>

{%  endblock %}