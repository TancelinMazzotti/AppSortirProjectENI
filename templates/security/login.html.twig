{% extends 'header/headerInscrip.html.twig' %}

{% block main %}
    <h1 class="text-center">Bienvenue sur la page de connection</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message.message }}
        </div>
    {% endfor %}
<div>
    <form action="{{ path('login') }}" method="post">

        <div class="form-row">
            <div class="form-group offset-4 col-md-4">
        <label for="username">Email :</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/><br/>

        <label for="password">Password :</label>
        <input class="form-control" type="password" id="password" name="_password"/><br/>
            </div>
        </div>

        <input type="hidden" name="_target_path" value="home"/>
        <div class="form-row">
            <div class="form-group offset-5 col-4">
                <button class="btn btn-success col-md-3" type="submit">login</button>
                <a href="{{ path('register') }}"><button type="button" class="btn btn-primary col-md-3">S'incrir</button></a>
            </div>
        </div>
        <div class="form-row">
            <div class="form-check offset-4 col-4">
                <input class="form-check-input" type="checkbox" value="" id="checkBox1">
                <label class="form-check-label" for="defaultCheck1">
                    Se souvenir de moi
                </label>
            </div>
        </div>
    </form>

    <div class="text-center">
        <a href="{{ path('fogotPass') }}">J'ai oublier mon mot de passe</a>
    </div>
</div>
{% endblock %}


