{% extends 'header/headerInscrip.html.twig' %}

{% block main %}
    <h1 class="text-center">Bienvenue sur la page de connection</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message.message }}
        </div>
    {% endfor %}
<div>
    <form action="{{ path('login') }}" method="post">

        <label for="username">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/><br/>

        <label for="password">Password :</label>
        <input type="password" id="password" name="_password"/><br/>


        <input type="hidden" name="_target_path" value="home"/>
        <button class="" type="submit">login</button>
        <a href="{{ path('register') }}"><button type="button" class="">S'incrir</button></a>
    </form>
</div>
{% endblock %}


