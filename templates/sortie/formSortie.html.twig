{% block formSortie %}
    <div class="container">
        <div class="row">
            <div class="col">
                {{ form_start(form) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.dateDebut) }}
                {{ form_row(form.dateCloture) }}
                {{ form_row(form.duree) }}
                {{ form_row(form.nbInscriptionMax) }}
                {{ form_row(form.descriptionInfo) }}
            </div>
            <div class="col">
                {{ form_row(form.campus) }}

                <label>Ville:</label>
                <select id="select_ville" onchange="onVilleChanged()">
                {% for ville in villes %}
                    <option value="{{ ville.id }}">{{ ville.nom }}</option>
                {% endfor %}
                </select>

                {{ form_row(form.lieux) }}
                <label>Rue: </label><p id="p_rue"></p>
                <label>Code postal: </label><p id="p_code_postal"></p>
                <label>Latitude: </label><p id="p_latitude"></p>
                <label>Longitude: </label><p id="p_longitude"></p>
                {{ form_row(form.organisateur) }}
                {{ form_row(form.etat) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Valider</button>
            </div>
            <div class="col">
                <a href="{{ path('home') }}" class="btn btn-danger btn-lg btn-block">Annuler</a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <script src="/js/sortie/sortie.js"></script>
{% endblock %}
